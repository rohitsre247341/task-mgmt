<%= form_with(model: @author, method: :post, url: '/sign_in', local: true) do |form| %>
    <section class="vh-100">
      <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-md-9 col-lg-6 col-xl-5">
            <%= image_tag "https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp", class: "img-fluid", alt: "Sample image" %>
          </div>
          <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
              <p class="lead fw-normal mb-0 me-3">Sign in</p>
            </div>
            <div class="form-outline mb-4">
              <%= form.email_field :email, class: "form-control form-control-lg ", placeholder: "Enter a valid email address" %>
              <label class="form-label" for="user_email">Email address</label>
            </div>
  
            <div class="form-outline mb-3">
              <%= form.password_field :password, class: "form-control form-control-lg", placeholder: "Enter password" %>
              <label class="form-label" for="user_password">Password</label>
            </div>
  
            <div class="d-flex justify-content-between align-items-center">

              <div class="form-check mb-0">
                <%= form.check_box :remember_me, class: "form-check-input me-2", id: "user_remember_me" %>
                <%= form.label :remember_me, "Remember me", class: "form-check-label", for: "user_remember_me" %>
              </div>
              <%= link_to "Forgot password?", "#!", class: "text-body" %>
            </div>
  
            <div class="text-center text-lg-start mt-4 pt-2">
              <%= form.submit "Login", class: "btn btn-primary btn-lg", style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>
              <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <%= link_to "Register", "/registration", class: "link-danger" %></p>
            </div>
  
          </div>
        </div>
      </div>
      <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
        <div class="text-white mb-3 mb-md-0">
          Copyright Â© 2020. All rights reserved.
        </div>

      </div>
    </section>
  <% end %>
  